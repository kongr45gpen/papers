@online{vivenzioFeasibilityAnalysisPreliminary2020,
  title = {Feasibility {{Analysis}} and {{Preliminary Design}} of {{ChipSat Entry}} for {{In-situ Investigation}} of the {{Atmosphere}} of {{Venus}}},
