@inproceedings{amanorLinkPerformanceImprovement2017,
  title = {Link Performance Improvement via Design Variables Optimization in {{LED-based VLC}} System for Inter-Satellite Communication},
  booktitle = {2017 {{IEEE International Conference}} on {{Wireless}} for {{Space}} and {{Extreme Environments}} ({{WiSEE}})},
  author = {Amanor, David N. and Edmonson, William W. and Afghah, Fatemeh},
  date = {2017-10},
